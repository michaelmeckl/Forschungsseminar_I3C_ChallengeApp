<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:padding="5dp">
    <!-- TODO dont set both widht AND heigt manually! use wrap content or else -->

    <EditText
        android:id="@+id/new_friend_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="Name Freund/Freundin"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@id/friend_invitation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/friend_invitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anfrage schicken"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_friend_name" />


</androidx.constraintlayout.widget.ConstraintLayout>