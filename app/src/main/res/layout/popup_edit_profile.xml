<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/profile_picture_edit_profile_fragment"
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:elevation="2dp"
        android:layout_margin="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/edit_profile_picture"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/iconfinder_avatar_378_456330_6415368" />

    <Button
        android:id="@+id/edit_profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profilbild ändern"
        app:layout_constraintBottom_toTopOf="@id/change_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_picture_edit_profile_fragment" />

    <EditText
        android:id="@+id/change_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_normal"
        android:layout_marginVertical="32dp"
        android:text="Name"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_picture"
        app:layout_constraintBottom_toTopOf="@id/save_changes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:autofillHints="Gib einen Namen ein"
        android:inputType="textPersonName"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/save_changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:text="Änderung sichern"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_name"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>