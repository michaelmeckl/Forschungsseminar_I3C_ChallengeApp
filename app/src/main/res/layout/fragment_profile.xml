<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/friends_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/profile_header_section_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:clickable="true"
                android:elevation="2dp"
                android:focusable="true"
                android:src="@drawable/ic_user_icon_default"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_toEndOf="@id/profile_picture"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                tools:text="Name" />

            <TextView
                android:id="@+id/profile_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_name"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_toEndOf="@id/profile_picture"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                tools:text="Level: 5" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_below="@id/profile_header_section_top"/>


        <!-- TODO sieht ziemlich scheiße hier aus, außerdem ist name auch schon oben! -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profile_change_username"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_header_section_top"
            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="32dp"
            android:layout_marginTop="25dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/change_name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="textPersonName"
                android:maxLength="30"
                android:textAlignment="center" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/save_changes"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginVertical="@dimen/margin_small"
            android:layout_below="@id/profile_change_username"
            android:text="Änderungen speichern"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friends_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="-26dp"
        tools:listitem="@layout/friends_list_item" />


</androidx.constraintlayout.widget.ConstraintLayout>