        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_achievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_header">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/achievements_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center_horizontal"
                android:padding="@dimen/margin_normal"
                android:text="Meine Erfolge"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/achievements_cardview_summary"
                app:layout_constraintHorizontal_bias="0.45"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/achievements_icon_title"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:layout_constraintTop_toTopOf="@id/achievements_title"
                app:layout_constraintLeft_toRightOf="@id/achievements_title"
                app:layout_constraintBottom_toBottomOf="@id/achievements_title"
                tools:ignore="ContentDescription"
                tools:src="@drawable/ic_trophy" />



            <androidx.cardview.widget.CardView
                android:id="@+id/achievements_cardview_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/achievements_title"
                card_view:cardCornerRadius="@dimen/card_view_corner_radius"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="24dp">

                    <!--XP-->
                    <ImageView
                        android:id="@+id/achievements_xp_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:src="@drawable/ic_trophy"
                        app:tint="@android:color/holo_orange_light" />


                    <TextView
                        android:id="@+id/achievements_xp_prefix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_toRightOf="@id/achievements_xp_img"
                        android:text="Gesamt XP: "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/achievements_xp_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_toEndOf="@id/achievements_xp_prefix"
                        android:text="13" />

                    <!--Dailystreak-->
                    <ImageView
                        android:id="@+id/achievements_dailystreak_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/achievements_xp_img"
                        android:layout_margin="4dp"
                        android:src="@drawable/ic_graph"
                        app:tint="@android:color/holo_purple" />

                    <TextView
                        android:id="@+id/achievements_dailystreak_prefix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/achievements_xp_img"
                        android:layout_margin="4dp"
                        android:layout_toRightOf="@id/achievements_dailystreak_img"
                        android:text="Tagesserie: "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/achievements_dailystreak_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/achievements_xp_img"
                        android:layout_margin="4dp"
                        android:layout_toEndOf="@id/achievements_dailystreak_prefix"
                        android:text="4" />

                    <!--Total completed-->
                    <ImageView
                        android:id="@+id/achievements_total_completed_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/achievements_dailystreak_img"
                        android:layout_margin="4dp"
                        android:src="@drawable/ic_checkmark_checked" />

                    <TextView
                        android:id="@+id/achievements_total_completed_prefix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/achievements_dailystreak_img"
                        android:layout_margin="4dp"
                        android:layout_toRightOf="@id/achievements_total_completed_img"
                        android:text="Abgeschlossene Challenges: "
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/achievements_total_completed_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/achievements_dailystreak_img"
                        android:layout_margin="4dp"
                        android:layout_toEndOf="@id/achievements_total_completed_prefix"
                        android:text="14" />
                    <!--Total created-->
                    <ImageView
                        android:id="@+id/achievements_total_created_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/achievements_total_completed_img"
                        android:layout_margin="4dp"
                        android:src="@drawable/ic_edit"
                        app:tint="@android:color/holo_blue_light" />

                    <TextView
                        android:id="@+id/achievements_total_created_prefix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/achievements_total_completed_img"
                        android:layout_margin="4dp"
                        android:layout_toRightOf="@id/achievements_total_created_img"
                        android:text="Erstellte Challenges: "
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/achievements_total_created_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/achievements_total_completed_img"
                        android:layout_margin="4dp"
                        android:layout_toEndOf="@id/achievements_total_created_prefix"
                        android:text="7" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>


