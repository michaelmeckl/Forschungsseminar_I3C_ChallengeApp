<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/card_view_corner_radius"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="@dimen/margin_normal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/challenge_detail_header_edit"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Challenge bearbeiten"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/challenge_detail_stop_editing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="4dp"
                    android:background="#0000"
                    android:contentDescription="@string/edit_challenge"
                    android:src="@drawable/ic_close"
                    android:visibility="gone"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="8dp">

                <TextView
                    android:id="@+id/challenge_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:singleLine="true"
                    android:textAppearance="@android:style/TextAppearance.Material.Title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Challenge Title jknjf adksfj kjklasdfj kjsdkj fkljsdklf " />

                <ImageButton
                    android:id="@+id/challenge_detail_start_editing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="#0000"
                    android:contentDescription="@string/edit_challenge"
                    android:src="@drawable/ic_edit"
                    app:layout_constraintBottom_toBottomOf="@+id/challenge_detail_title"
                    app:layout_constraintLeft_toRightOf="@id/challenge_detail_title"
                    app:layout_constraintTop_toTopOf="@+id/challenge_detail_title" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_challenge_detail_title_edit"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/challenge_detail_title_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Neuer Titel"
                    android:inputType="text"
                    android:paddingHorizontal="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Challenge Title" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/challenge_detail_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="@dimen/margin_normal"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                app:layout_constraintBottom_toTopOf="@+id/challenge_detail_relativelayout_online"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/challenge_detail_title"
                tools:text="Schwierigkeit: Mittel" />

            <TextView
                android:id="@+id/challenge_detail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/margin_normal"
                android:paddingHorizontal="30dp"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/challenge_detail_difficulty"
                tools:text="Challenge Description jflalakjflajlk jalfjlaj lfjalafjklaj fjlajljfl fjlajflajlaj" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_challenge_detail_description_edit"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/challenge_detail_description_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Neue Beschreibung"
                    android:inputType="textMultiLine"
                    android:paddingHorizontal="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Challenge Description" />
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/challenge_detail_spinner_difficulties_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/challenge_detail_button_submit_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                android:text="Bestätigen"
                android:visibility="gone" />


            <View
                android:id="@+id/view_divider"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginVertical="@dimen/margin_normal"
                android:background="?android:attr/dividerHorizontal"/>

            <!-- Switch Layout -->
            <RelativeLayout
                android:id="@+id/switch_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/publish_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Challenge veröffentlichen:"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/publish_switch_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/publish_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_small">

                    <TextView
                        android:id="@+id/text_private"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="-16dp"
                        android:layout_toStartOf="@+id/publish_switch"
                        android:text="Privat " />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/publish_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:checked="false"
                        android:textOff="Privat"
                        android:textOn="Öffentlich" />

                    <TextView
                        android:id="@+id/text_public"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toEndOf="@+id/publish_switch"
                        android:text=" Öffentlich" />

                </RelativeLayout>

            </RelativeLayout>

            <!--Show this RelativeLayout when challenge is online-->
            <RelativeLayout
                android:id="@+id/challenge_detail_relativelayout_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch_layout">

                <TextView
                    android:id="@+id/challenge_detail_status_online_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: Challenge veröffentlicht" />

                <ImageView
                    android:id="@+id/challenge_detail_status_online_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/challenge_detail_status_online_textview"
                    android:src="@drawable/ic_challenge_detail_online"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <!--Show this RelativeLayout when challenge is offline-->
            <RelativeLayout
                android:id="@+id/challenge_detail_relativelayout_offline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                android:paddingTop="@dimen/margin_normal"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch_layout">

                <TextView
                    android:id="@+id/challenge_detail_status_offline_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: Challenge nicht veröffentlicht " />

                <ImageView
                    android:id="@+id/challenge_detail_status_offline_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/challenge_detail_status_offline_textview"
                    android:src="@drawable/ic_challenge_detail_offline"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/challenge_detail_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/errorLight"
                android:text="Challenge löschen"
                android:textColor="@color/design_default_color_surface"
                app:icon="@drawable/ic_delete" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/challenge_detail_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </androidx.cardview.widget.CardView>

</androidx.core.widget.NestedScrollView>