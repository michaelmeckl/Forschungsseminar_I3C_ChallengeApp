<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="@dimen/card_view_corner_radius"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_normal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/challenge_detail_header_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Challenge bearbeiten"
                android:visibility="gone"
                style="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageButton
                android:id="@+id/challenge_detail_stop_editing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="#0000"
                android:layout_marginStart="4dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/edit_challenge"
                android:src="@drawable/ic_close"
                android:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="8dp">

            <TextView
                android:id="@+id/challenge_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Challenge Title" />

            <ImageButton
                android:id="@+id/challenge_detail_start_editing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="#0000"
                android:contentDescription="@string/edit_challenge"
                android:src="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="@+id/challenge_detail_title"
                app:layout_constraintLeft_toRightOf="@id/challenge_detail_title"
                app:layout_constraintTop_toTopOf="@+id/challenge_detail_title" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_challenge_detail_title_edit"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/challenge_detail_title_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:paddingHorizontal="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Challenge Title" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/challenge_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:paddingHorizontal="30dp"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/challenge_detail_title"
            tools:text="Challenge Description jflalakjflajlk jalfjlaj lfjalafjklaj fjlajljfl fjlajflajlaj" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_challenge_detail_description_edit"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/challenge_detail_description_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:paddingHorizontal="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Challenge Description" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/challenge_detail_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_normal"
            android:paddingHorizontal="30dp"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            app:layout_constraintBottom_toTopOf="@+id/challenge_detail_relativelayout_online"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/challenge_detail_description"
            tools:text="Schwierigkeit: Mittel" />

        <Spinner
            android:id="@+id/challenge_detail_spinner_difficulties_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/challenge_detail_button_submit_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:text="Bestätigen"
            android:visibility="gone" />

        <!--Show this RelativeLayout when challenge is online-->
        <RelativeLayout
            android:id="@+id/challenge_detail_relativelayout_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:layout_marginTop="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/challenge_detail_difficulty">

            <TextView
                android:id="@+id/challenge_detail_status_online_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Challenge online geteilt " />

            <ImageView
                android:id="@+id/challenge_detail_status_online_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/challenge_detail_status_online_textview"
                android:src="@drawable/ic_challenge_detail_online" />
        </RelativeLayout>

        <!--Show this RelativeLayout when challenge is offline-->
        <RelativeLayout
            android:id="@+id/challenge_detail_relativelayout_offline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:layout_marginTop="32dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/challenge_detail_difficulty">

            <TextView
                android:id="@+id/challenge_detail_status_offline_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Challenge nicht veröffentlicht " />

            <ImageView
                android:id="@+id/challenge_detail_status_offline_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/challenge_detail_status_offline_textview"
                android:src="@drawable/ic_challenge_detail_offline" />
        </RelativeLayout>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/publish_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginTop="16dp"
            android:text="Challenge veröffentlichen:  "
            android:textOff="Privat"
            android:textOn="Öffentlich"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/challenge_detail_relativelayout_online" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/challenge_detail_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.cardview.widget.CardView>