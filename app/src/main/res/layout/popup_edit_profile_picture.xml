<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="5dp">
    <!-- TODO dont set both widht AND heigt manually! use wrap content or else  -->
    <!--de.hdodenhof.circleimageview.CircleImageView -->

    <!--  1  app:layout_constraintBottom_toTopOf="@+id/profile_picture_4"
       app:layout_constraintRight_toLeftOf="@+id/profile_picture_2" /> -->

    <!-- 2  app:layout_constraintBottom_toTopOf="@id/profile_picture_5"
        app:layout_constraintLeft_toRightOf="@id/profile_picture_1"
        app:layout_constraintRight_toLeftOf="@id/profile_picture_3" /> -->

    <!-- 3   app:layout_constraintBottom_toTopOf="@id/profile_picture_6"
        app:layout_constraintLeft_toRightOf="@id/profile_picture_2" /> -->

    <!-- 4  app:layout_constraintRight_toLeftOf="@id/profile_picture_5"
        app:layout_constraintTop_toBottomOf="@id/profile_picture_1" /> -->

    <!--  5  app:layout_constraintLeft_toRightOf="@id/profile_picture_4"
       app:layout_constraintRight_toLeftOf="@id/profile_picture_6"
