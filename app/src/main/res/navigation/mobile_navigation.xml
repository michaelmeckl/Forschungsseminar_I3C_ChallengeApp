<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/navigation_overview">

    <fragment
        android:id="@+id/navigation_overview"
        android:name="com.example.challengecovid.ui.OverviewFragment"
        android:label="@string/title_overview"
        tools:layout="@layout/fragment_overview">
        <action
            android:id="@+id/action_overview_to_detail"
            app:destination="@id/navigation_category_detail"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_challenges"
        android:name="com.example.challengecovid.ui.ChallengesFragment"
        android:label="@string/title_challenges"
        tools:layout="@layout/fragment_challenges" />

    <fragment
        android:id="@+id/navigation_category_detail"
        android:name="com.example.challengecovid.ui.CategoryDetailFragment"
        android:label="@string/title_category_detail"
        tools:layout="@layout/fragment_category_detail">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="description"
            app:argType="string" />
        <argument
            android:name="imageRes"
            app:argType="integer"/>
    </fragment>

    <!-- TODO not as global action! -->
    <action
        android:id="@+id/action_global_navigation_map"
        app:destination="@id/navigation_challenges"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim" >
        <argument
            android:name="showDetails"
            app:argType="string"
            android:defaultValue="id_unknown" />
    </action>

</navigation>