<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/navigation_overview">

    <fragment
        android:id="@+id/navigation_overview"
        android:name="com.example.challengecovid.ui.OverviewFragment"
        android:label="@string/label_overview"
        tools:layout="@layout/fragment_overview">
        <action
            android:id="@+id/action_overview_to_create"
            app:destination="@id/navigation_create_challenge"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_challenges"
        android:name="com.example.challengecovid.ui.ChallengesFragment"
        android:label="@string/label_challenges"
        tools:layout="@layout/fragment_challenges">
        <action
            android:id="@+id/action_category_to_detail"
            app:destination="@id/navigation_category_detail"/>
    </fragment>

    <dialog
        android:id="@+id/navigation_add_friend"
        android:name="com.example.challengecovid.ui.profile.AddFriendFragment"
        android:label="AddFriendDialog"
        tools:layout="@layout/popup_add_friend"/>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.challengecovid.ui.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_editProfileDialog"
            app:destination="@id/navigation_edit_profile" />
        <action
            android:id="@+id/action_profileFragment_to_addFriend"
            app:destination="@id/navigation_add_friend" />
    </fragment>

    <fragment
        android:id="@+id/navigation_edit_profile"
        android:name="com.example.challengecovid.ui.profile.EditProfileFragment"
        android:label="EditProfileDialog"
        tools:layout="@layout/popup_edit_profile">
    </fragment>

    <fragment
        android:id="@+id/navigation_category_detail"
        android:name="com.example.challengecovid.ui.CategoryDetailFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_category_detail">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="description"
            app:argType="string" />
        <argument
            android:name="imageName"
            app:argType="string"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_social"
        android:name="com.example.challengecovid.ui.SocialFragment"
        android:label="@string/label_social"
        tools:layout="@layout/fragment_social" />

    <fragment
        android:id="@+id/navigation_credits"
        android:name="com.example.challengecovid.ui.CreditsFragment"
        android:label="@string/label_credits"
        tools:layout="@layout/fragment_credits" />

    <dialog
        android:id="@+id/navigation_create_challenge"
        android:name="com.example.challengecovid.ui.CreateChallengeFragment"
        android:label="CreateChallengeFragment"
        tools:layout="@layout/fragment_create_new_challenge">
    </dialog>

</navigation>